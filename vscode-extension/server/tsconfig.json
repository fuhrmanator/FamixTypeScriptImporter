{
	"compilerOptions": {
		"target": "es2022",
		"lib": ["es2022"],
		"module": "node18",
		"moduleResolution": "nodenext",
		"sourceMap": true,
		"strict": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"baseUrl": "./",
		"skipLibCheck": true,
		"typeRoots": [	/* https://www.typescriptlang.org/tsconfig/#typeRoots */
			"./node_modules/@types"
		],
		"composite": true,
	},
	"include": ["src"],
	"exclude": ["node_modules", "../../node_modules", ".vscode-test"]
}
