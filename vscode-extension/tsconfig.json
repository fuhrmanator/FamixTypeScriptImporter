{
	"compilerOptions": {
		"module": "node18",
		"target": "es2022",
		"lib": ["es2022"],
		"outDir": "./dist",
		"rootDir": "./src",
		"sourceMap": true,
		"skipLibCheck": true,
		"typeRoots": [	/* https://www.typescriptlang.org/tsconfig/#typeRoots */
			"./node_modules/@types"
		],
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		"../node_modules",
		".vscode-test"
	],
	"references": [
		{ "path": "./client" },
		{ "path": "./server" }
	]
}